{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext", //? es6
    "target": "es5",
    "jsx": "react-jsx", // jsx- чтобы не импортировать реакт в компоненты
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@common/*": ["src/common/*"],
      "@commonComponents/*": ["src/components/commonComponents/*"],
      "@creating/*": ["src/components/creating/*"],
      "@editing/*": ["src/components/editing/*"],
      "@questionnaire/*": ["src/components/questionnaire/*"],
      "@lib/*": ["src/chadcnComponents/lib/*"],
      "@ui/*": ["src/chadcnComponents/ui/*"],
      "@store/*": ["src/store/*"],
      "@reducers/*": ["src/store/reducers/*"]
    }
  }
}
